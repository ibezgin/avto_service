{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2019",
        "sourceMap": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "outDir": "../../dist/server",
        "lib": ["ES2019"],
        "moduleResolution": "node",
        "incremental": true,
        "composite": true,
        "skipLibCheck": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts"],
    "references": [{ "path": "../shared" }],
    "typeRoots": ["./node_modules/@types", "./global.d.ts"],
}
